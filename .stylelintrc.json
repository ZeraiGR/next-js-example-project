{
  "extends": [
    "stylelint-config-standard",
    "stylelint-order-config-standard",
    "stylelint-config-standard-scss"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": ["tab"],
    "color-hex-case": "lower",
    "max-line-length": [
      true,
      {
        "limit": 150,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ]
  }
}
